rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      return getRole(request.auth.uid) == 'admin' || isSuperAdmin();
    }
    
    function isSuperAdmin() {
        return getRole(request.auth.uid) == 'super_admin';
    }

    // User Profiles
    match /users/{userId} {
      allow create: if isOwner(userId);
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow update: if isOwner(userId) || isSuperAdmin();
    }

    // Cash Games
    match /cashGames/{gameId} {
      allow get, list: if isSignedIn();
      allow create: if isAdmin();
      allow delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());

      // Update Rules:
      // - The game owner or an admin can update anything (including designating the dealer).
      // - The designated dealer can update the 'handState'.
      // - Any signed-in user can update 'requests' to join.
      allow update: if isSignedIn() && 
                    (
                      // Allow owner or admin to manage the game fully
                      (resource.data.ownerId == request.auth.uid || isAdmin()) ||
                      // Allow the dealer to update the hand state
                      (request.auth.uid == resource.data.ownerId && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['handState'])) ||
                       // Allow anyone to request to join
                      (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['requests']))
                    );
    }

    // Tournaments (Read-only for now)
    match /tournaments/{tournamentId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;

      match /rounds/{roundId} {
        allow get, list: if isSignedIn();
        allow create, update, delete: if false;
      }

      match /payoutStructures/{payoutStructureId} {
        allow get, list: if isSignedIn();
        allow create, update, delete: if false;
      }
    }
  }
}
