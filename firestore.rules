rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      return getRole(request.auth.uid) == 'admin' || isSuperAdmin();
    }
    
    function isSuperAdmin() {
        return getRole(request.auth.uid) == 'super_admin';
    }

    // User Profiles
    match /users/{userId} {
      // Any authenticated user can create their own profile document.
      // This is crucial for the sign-up process.
      allow create: if isOwner(userId);
      
      // Users can only read their own profile. Admins can read any profile.
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      
      // Users can update their own profile. Super admins can update any profile role.
      allow update: if isOwner(userId) || isSuperAdmin();
    }

    // Cash Games
    match /cashGames/{gameId} {
      // Any signed-in user can read game data to spectate or join.
      allow get: if isSignedIn();
      allow list: if isSignedIn();

      // Only admins can create new games.
      allow create: if isAdmin();

      // Deleting a game is restricted to the owner or an admin.
      allow delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());

      // Updating a game has nuanced rules:
      // - Any signed-in user can update the 'requests' array to ask to join.
      // - Only the game owner or an admin can update other fields.
      allow update: if isSignedIn() && 
                    (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['requests']) || 
                    (resource.data.ownerId == request.auth.uid || isAdmin()));
    }

    // Tournaments (Read-only for now)
    match /tournaments/{tournamentId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;

      match /rounds/{roundId} {
        allow get, list: if isSignedIn();
        allow create, update, delete: if false;
      }

      match /payoutStructures/{payoutStructureId} {
        allow get, list: if isSignedIn();
        allow create, update, delete: if false;
      }
    }
  }
}
